import BaseLayout from "../layouts/BaseLayout.astro";
import Card from "../components/Card.astro";
import AssignmentItem from "../components/AssignmentItem.astro";
import ClassCard from "../components/ClassCard.astro";

---
<BaseLayout>
<h1 class="text-2xl font-bold mb-4 text-gray-900 dark:text-white"></span>Dashboard</h1>
   <div>
      <h2 class="text-lg font-semibold mb-2 text-blue-600 dark:text-blue-400 border-l-4 border-blue-600 dark:border-blue-400 pl-3">Assignments</h2>
      <AssignmentItem title="Write a fantasy story" course="English" dueDate="2025-12-10" points={25} status="pending" href="#" />
      <AssignmentItem title="2.4 Homework" course="Math" dueDate="2025-12-08" points={10} status="pending" href="#" />
      <AssignmentItem title="Properties of Matter Lab" course="Chemistry" dueDate="2025-12-09" points={20} status="pending" href="#" />
    </div>
   <div>
      <h2 class="text-lg font-semibold mb-2 text-blue-600 dark:text-blue-400 border-l-4 border-blue-600 dark:border-blue-400 pl-3">Classes</h2>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-y-0.5 gap-x-2 w-full">
        <ClassCard title="Intro to Statistics" code="" instructor="Mrs. Marlowe" schedule="Mon & Wed 10:00–11:30" room="Rm 204" progress={42} students={28} capacity={30} status="active" />
        <ClassCard title="Creative Writing Workshop" instructor="Prof. Page" schedule="Tue 1:00–2:30" room="Rm 110" />
      <ClassCard title="Biology 1010" instructor="Dr. Bio" schedule="Mon, Wed, Fri 09:00–10:30" room="Rm 267" />
      </div>
