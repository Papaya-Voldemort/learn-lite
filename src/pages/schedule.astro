---
import BaseLayout from "../layouts/BaseLayout.astro";
import Badge from "../components/Badge.astro";
import Button from "../components/Button.astro";
import Avatar from "../components/Avatar.astro";
import sessions from "../../mock/schedule.json";
---
<BaseLayout>
  <div class="mb-8">
    <h1 class="text-2xl font-bold mb-2 text-gray-900 dark:text-white"><span class="text-blue-600 dark:text-blue-400">Upcoming</span> Sessions</h1>
    <p class="text-gray-500 dark:text-gray-400">Find a study group or workshop to join</p>
  </div>
  
  <div class="flex flex-col gap-3">
    {sessions.map(session => (
      <div class="bg-white dark:bg-gray-800 p-4 sm:p-5 rounded-xl border border-gray-100 dark:border-gray-700 hover:border-blue-400 dark:hover:border-blue-500 hover:shadow-md hover:bg-blue-50 dark:hover:bg-gray-700 transition-all">
        <div class="flex flex-col sm:flex-row sm:items-start gap-3 sm:gap-4">
          <div class="flex items-center gap-3 sm:block">
            <Avatar src={session.avatar} initials={session.initials} size="md" />
            <div class="sm:hidden flex-1 min-w-0">
              <h2 class="font-semibold text-gray-900 dark:text-white">{session.title}</h2>
            </div>
            <div class="sm:hidden flex-shrink-0">
              {session.spots > 0 ? (
                <Button size="sm">Join</Button>
              ) : (
                <Badge variant="danger">Full</Badge>
              )}
            </div>
          </div>
          <div class="flex-1 min-w-0">
            <h2 class="hidden sm:block font-semibold text-gray-900 dark:text-white mb-1">{session.title}</h2>
            <p class="text-gray-600 dark:text-gray-300 text-sm mb-3">{session.description}</p>
            <div class="flex flex-wrap items-center gap-2 sm:gap-3 text-xs sm:text-sm text-gray-400 dark:text-gray-500">
              <span>{session.date} Â· {session.time}</span>
              <span class="hidden sm:inline text-gray-300 dark:text-gray-600">|</span>
              <span>{session.duration}</span>
              <span class="hidden sm:inline text-gray-300 dark:text-gray-600">|</span>
              <span>{session.host}</span>
            </div>
          </div>
          <div class="hidden sm:block flex-shrink-0 text-right">
            {session.spots > 0 ? (
              <div class="flex flex-col items-end gap-2">
                <span class="text-xs text-gray-200 dark:text-gray-100">{session.spots} {session.spots === 1 ? 'spot' : 'spots'} left</span>
                <Button size="sm">Join</Button>
              </div>
            ) : (
              <div class="flex flex-col items-end gap-1">
                <Badge variant="danger">Full</Badge>
              </div>
            )}
          </div>
          <div class="sm:hidden flex items-center justify-between pt-2 border-t border-gray-100 dark:border-gray-700">
            <span class="text-xs text-gray-400 dark:text-gray-500">{session.spots > 0 ? `${session.spots} ${session.spots === 1 ? 'spot' : 'spots'} left` : 'Session full'}</span>
          </div>
        </div>
      </div>
    ))}
  </div>
</BaseLayout>
  <div class="w-full text-center text-xs text-gray-400 mt-8 mb-2">Image credit: Unsplash</div>